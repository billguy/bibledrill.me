$('#content').html('<%= j(render('show')) %>');

<% if @verses.length == 1 %>
    $('#content').attr('data-next-path', '<%= book_chapter_verse_path(book_id: @next_verse.book_permalink, chapter_id: @next_verse.chapter_number, id: @next_verse.number) %>');
    $('#content').attr('data-prev-path', '<%= book_chapter_verse_path(book_id: @prev_verse.book_permalink, chapter_id: @prev_verse.chapter_number, id: @prev_verse.number) %>');
<% else %>
    $('#content').attr('data-next-path', '<%= book_chapter_path(book_id: @next_chapter.book_permalink, id: @next_chapter.number) %>');
    $('#content').attr('data-prev-path', '<%= book_chapter_path(book_id: @prev_chapter.book_permalink, id: @prev_chapter.number) %>');
<% end %>

document.title = "<%= display_title(default_meta_tags) %>";
$("html, body").scrollTop(0);